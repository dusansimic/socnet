{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/julialang/devcontainer-features/julia:1": {
			"channel": "1.9"
		}
	},

	"postCreateCommand": "./postcreate.jl",

	// Configure tool-specific properties.
